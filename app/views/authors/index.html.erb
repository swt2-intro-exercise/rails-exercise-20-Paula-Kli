<h1>Listing Authors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
  </tr>

  <% @author.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
      <td><%= link_to 'Edit', edit_author_path(author) %></td>
      <td><%= link_to 'Destroy', author_path(author), method: :delete,
                      data: { confirm: 'Are you sur?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New', new_author_path %>